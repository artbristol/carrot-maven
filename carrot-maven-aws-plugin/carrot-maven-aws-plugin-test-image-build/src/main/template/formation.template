{
	
    "AWSTemplateFormatVersion": "2010-09-09",
    
    "Description": "project : ${project.artifactId}",
    
    "Parameters": {
    	
        "KeyName": {
            "Type": "String",
            "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance"
        },
        
        "InstanceType": {
            "Type": "String",
            "Description": "EC2 instance type, e.g. t1.micro, m1.small, m1.large, etc."
        },
        
        "DNSZoneName": {
            "Type": "String",
            "Description": "Route 53 zone name which will contain the instance"
        },
        
        "DNSHostName": {
            "Type": "String",
            "Description": "Route 53 host name which will be assigned to the instance"
        }
        
    },
    
    "Mappings": {
    	
        "RegionImageMap": {
            "ap-northeast-1": { "AMI": "ami-4cc57c4d" },
            "ap-southeast-1": { "AMI": "ami-a45211f6" },
            "eu-west-1":      { "AMI": "ami-05585a71" },
            "sa-east-1":      { "AMI": "ami-a66eb7bb" },
            "us-east-1":      { "AMI": "ami-d6e367bf" },
            "us-west-1":      { "AMI": "ami-2ead8b6b" },
            "us-west-2":      { "AMI": "ami-e01f96d0" }
        }
    
    },
    
    "Resources": {
    	
        "BuilderInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": { "Ref": "KeyName" },
                "InstanceType": { "Ref": "InstanceType" },
                "ImageId": { "Fn::FindInMap": [ "RegionImageMap", { "Ref": "AWS::Region" }, "AMI" ] },
                "UserData": {
                    "Fn::Base64": "user data"
                },
                "Tags": [
                    { "Key": "Name", "Value": "builder" }
                ]
            }
        },
        "BuilderInstanceDNS": {
            "Type": "AWS::Route53::RecordSet",
            "Properties": {
                "HostedZoneName": {
                    "Ref": "DNSZoneName"
                },
                "Name": {
                    "Ref": "DNSHostName"
                },
                "Comment": "CNAME for builder",
                "Type": "CNAME",
                "TTL": "60",
                "ResourceRecords": [
                    {
                        "Fn::GetAtt": [
                            "BuilderInstance",
                            "PublicDnsName"
                        ]
                    }
                ]
            }
        }
    },
    "Outputs": {
        "InstanceId": {
            "Description": "EC2 InstanceId",
            "Value": {
                "Ref": "BuilderInstance"
            }
        },
        "AvailabilityZone": {
            "Description": "Availability Zone",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "AvailabilityZone"
                ]
            }
        },
        "PublicIp": {
            "Description": "Public IP address",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PublicIp"
                ]
            }
        },
        "PrivateIp": {
            "Description": "Private IP address",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PrivateIp"
                ]
            }
        },
        "PublicDnsName": {
            "Description": "Public Dns Name",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PublicDnsName"
                ]
            }
        },
        "PrivateDnsName": {
            "Description": "Private Dns Name",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PrivateDnsName"
                ]
            }
        }
    }
    
}
