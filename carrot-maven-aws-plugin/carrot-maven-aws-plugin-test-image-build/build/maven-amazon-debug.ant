<project default="maven" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<target name="maven">
		<exec executable="mvn" output="mvn.log">

			<arg value="clean" />
			<arg value="package" />


			<arg value="--debug" />

			<arg value="--update-snapshots" />

			<arg value="--activate-profiles" />
			<arg value="image-build" />

		</exec>
	</target>

</project>
