{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "builder instance",
    "Mappings": {
        "RegionMap": {
            "us-east-1": {
                "AMI": "ami-a0ba68c9"
            },
            "us-west-1": {
                "AMI": "ami-63a8f126"
            },
            "us-west-2": {
                "AMI": "ami-ac05889c"
            },
            "eu-west-1": {
                "AMI": "ami-8d5069f9"
            },
            "ap-southeast-1": {
                "AMI": "ami-5c96d20e"
            },
            "ap-northeast-1": {
                "AMI": "ami-0e299f0f"
            },
            "sa-east-1": {
                "AMI": "ami-b473aca9"
            }
        }
    },
    "Resources": {
        "BuilderInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": "carrotgarden",
                "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "AMI"
                    ]
                },
                "InstanceType": "t1.micro",
                "UserData": {
                    "Fn::Base64": "user data"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "builder"
                    }
                ]
            }
        },
        "BuilderInstanceDNS": {
            "Type": "AWS::Route53::RecordSet",
            "Properties": {
                "HostedZoneName": "carrotgarden.com.",
                "Comment": "CNAME for builder",
                "Name": "builder.carrotgarden.com.",
                "Type": "CNAME",
                "TTL": "60",
                "ResourceRecords": [
                    {
                        "Fn::GetAtt": [
                            "BuilderInstance",
                            "PublicDnsName"
                        ]
                    }
                ]
            }
        }
    },
    "Outputs": {
        "InstanceId": {
            "Description": "EC2 InstanceId",
            "Value": {
                "Ref": "BuilderInstance"
            }
        },
        "AvailabilityZone": {
            "Description": "Availability Zone",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "AvailabilityZone"
                ]
            }
        },
        "PublicIp": {
            "Description": "Public IP address",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PublicIp"
                ]
            }
        },
        "PrivateIp": {
            "Description": "Private IP address",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PrivateIp"
                ]
            }
        },
        "PublicDnsName": {
            "Description": "Public Dns Name",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PublicDnsName"
                ]
            }
        },
        "PrivateDnsName": {
            "Description": "Private Dns Name",
            "Value": {
                "Fn::GetAtt": [
                    "BuilderInstance",
                    "PrivateDnsName"
                ]
            }
        }
    }
}
